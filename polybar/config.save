width = 100%
height = 33
radius = 0
fixed-center = true
bottom = true
background = ${colors.bg}
foregound = ${colors.fg}
separator =
module-margin = 1
line-size = 1
;line-color

border-top-size = 5
border-bottom-size = 5
border-left-size = 5
border-right-size = 5
border-radius = 0

#border-top-color = ${colors.bg}
border-top-color = ${colors.bg}
border-bottom-color = ${colors.bg}
border-left-color = ${colors.bg}
border-right-color = ${colors.bg}

;tray-position = right

